GOOGLE_MAPS_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# ===== PRICING CONFIGURATION =====
BASE_FARE=30
RATE_PER_KM=12
NIGHT_SURCHARGE_PER_KM=2
NIGHT_START_HOUR=22
NIGHT_END_HOUR=6
DRIVER_SHARE_PERCENT=80
PLATFORM_FEE_PERCENT=20
DAILY_CAR_RENT=250
MINIMUM_FARE=50
MAXIMUM_FARE=5000

# Corporate/Monthly rates
CORPORATE_RATE_PER_KM=8
CORPORATE_BASE_FARE=20
MONTHLY_SUBSCRIPTION_DISCOUNT_PERCENT=15

# ===== OPERATIONAL SETTINGS =====
MAX_PICKUP_RADIUS_KM=15
RIDE_REQUEST_TIMEOUT_SECONDS=15
MAX_ACTIVE_RIDES_PER_DRIVER=1
MIN_BATTERY_PERCENT_FOR_RIDE=20

# ===== EMAIL CONFIGURATION (Optional) =====
# For SendGrid
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SENDGRID_FROM_EMAIL=noreply@sukhsafar.in

# For Gmail SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# ===== SECURITY =====
JWT_SECRET=your-super-secret-jwt-key-change-this-to-random-string
SESSION_SECRET=another-random-secret-for-sessions
ADMIN_PASSWORD_HASH=$2b$10$xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ===== ANALYTICS (Optional) =====
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
FACEBOOK_PIXEL_ID=xxxxxxxxxxxxxxxxxx

# ===== NODE ENVIRONMENT =====
NODE_ENV=production
PORT=3000

# ===== FEATURE FLAGS =====
ENABLE_PAYMENT_GATEWAY=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_REAL_TIME_TRACKING=true
ENABLE_DRIVER_RATINGS=true
ENABLE_SURGE_PRICING=false
ENABLE_CORPORATE_BOOKING=true

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===== DATABASE CLEANUP =====
# Auto-delete completed rides older than X days
AUTO_DELETE_OLD_RIDES_DAYS=90
BACKUP_BEFORE_DELETE=true

# ===== DEVELOPER MODE =====
# Set to true for local development
DEBUG_MODE=false
LOG_LEVEL=info
# Options: error, warn, info, debug

# ===== WEBHOOKS (Optional) =====
# For integrations with external services
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/xxx/xxx
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxx/xxx

# ===== BACKUP & DISASTER RECOVERY =====
BACKUP_FREQUENCY_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups
